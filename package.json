{
  "name": "cccontext",
  "version": "1.1.1",
  "description": "Real-time context usage monitor for Claude Code",
  "type": "module",
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": "./dist/cli.js",
  "exports": {
    ".": "./dist/cli.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "monitor": "node dist/cli.js monitor --live",
    "sessions": "node dist/cli.js sessions --live --limit 10",
    "sessions:20": "node dist/cli.js sessions --live --limit 20",
    "sessions:all": "node dist/cli.js sessions --live --limit 50",
    "dev": "tsx src/cli.ts",
    "dev:monitor": "tsx src/cli.ts monitor --live",
    "dev:sessions": "tsx src/cli.ts sessions --live --limit 10",
    "build": "tsc",
    "build:prod": "tsc --project tsconfig.prod.json",
    "build:minify": "npm run build:prod && node scripts/build.mjs",
    "build:bundled": "node scripts/build-bundled.mjs",
    "build:ultra": "node scripts/build-ultra-optimized.mjs",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prebuild:prod": "npm run clean",
    "prebuild:minify": "npm run clean",
    "analyze": "npm run build:minify -- --analyze",
    "size": "size-limit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "check:all": "npm run typecheck && npm run check",
    "prepublishOnly": "npm run build:minify && npm run size"
  },
  "keywords": [
    "claude",
    "claude-code",
    "context",
    "monitor",
    "usage",
    "tokens"
  ],
  "author": "ryuta1346",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryuta1346/cccontext.git"
  },
  "homepage": "https://github.com/ryuta1346/cccontext#readme",
  "bugs": {
    "url": "https://github.com/ryuta1346/cccontext/issues"
  },
  "files": [
    "dist/cli.js",
    "dist/cli.d.ts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "string-width": "^7.2.0",
    "tslib": "^2.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@size-limit/file": "^11.2.0",
    "@types/blessed": "^0.1.25",
    "@types/node": "^24.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "esbuild": "^0.25.9",
    "glob": "^11.0.3",
    "size-limit": "^11.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
