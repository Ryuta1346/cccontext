{
  "name": "cccontext",
  "version": "1.1.1",
  "description": "Real-time context usage monitor for Claude Code",
  "type": "module",
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": "./dist/cli.js",
  "exports": {
    ".": "./dist/cli.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "monitor": "node dist/cli.js monitor --live",
    "dev": "tsx src/cli.ts",
    "dev:monitor": "tsx src/cli.ts monitor --live",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "check:all": "npm run typecheck && npm run check"
  },
  "keywords": [
    "claude",
    "claude-code",
    "context",
    "monitor",
    "usage",
    "tokens"
  ],
  "author": "ryuta1346",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryuta/cccontext.git"
  },
  "homepage": "https://github.com/ryuta/cccontext#readme",
  "bugs": {
    "url": "https://github.com/ryuta/cccontext/issues"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "string-width": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/blessed": "^0.1.25",
    "@types/node": "^24.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
