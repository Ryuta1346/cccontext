{
  "name": "cccontext",
  "version": "1.4.1",
  "description": "Real-time context usage monitor for Claude Code",
  "type": "module",
  "sideEffects": false,
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": "./dist/cli.js",
  "exports": {
    ".": "./dist/cli.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "monitor": "node dist/cli.js monitor --live",
    "sessions": "node dist/cli.js sessions --live --limit 10",
    "sessions:20": "node dist/cli.js sessions --live --limit 20",
    "sessions:all": "node dist/cli.js sessions --live --limit 50",
    "dev": "tsx src/cli.ts",
    "dev:monitor": "tsx src/cli.ts monitor --live",
    "dev:sessions": "tsx src/cli.ts sessions --live --limit 10",
    "build": "node scripts/build.mjs",
    "build:watch": "node scripts/build.mjs --watch",
    "build:analyze": "node scripts/build.mjs --analyze",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "size": "size-limit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "check:all": "npm run typecheck && npm run check",
    "prepublishOnly": "npm run build && npm run size"
  },
  "keywords": [
    "claude",
    "claude-code",
    "context",
    "monitor",
    "usage",
    "tokens"
  ],
  "author": "ryuta1346",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryuta1346/cccontext.git"
  },
  "homepage": "https://github.com/ryuta1346/cccontext#readme",
  "bugs": {
    "url": "https://github.com/ryuta1346/cccontext/issues"
  },
  "files": [
    "dist/cli.js",
    "dist/cli.d.ts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chokidar": "^5.0.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.3",
    "picocolors": "^1.1.1",
    "string-width": "^8.1.1",
    "tslib": "^2.8.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@size-limit/file": "^12.0.0",
    "@types/blessed": "^0.1.27",
    "@types/node": "^24.3.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "c8": "^10.1.3",
    "esbuild": "^0.27.3",
    "size-limit": "^12.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
